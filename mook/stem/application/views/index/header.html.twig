<!--header start-->
<header>
    <div id="top-nav" class="navbar navbar-fixed-top" role="navigation">
        <h1 id="mook-Logo"><a href="/">墨客beta</a></h1>
    <ul class="nav nav-pills">
    <li class="pull-left m-search">
        <form id="search-form" action="/search" method="get">
            <span class="icon-m-search"></span>
            <input type="text" value="" name="q">
        </form>
    </li>
    <li class="pull-left"><a class="text" href="/flows">知识库</a></li>
    {% if app %}
    <li class="pull-right">
        <a class="text" href="#" id="id_profile" data-toggle="dropdown">
            <span class="m-avatar"><img src="{{ app.cover_small|default("/web/img/default/avatar-icon-default.png")  }}"></span>
        </a>
        <div class="dropdown-menu" role="menu" aria-labelledby="id_profile">
            <a role="menuitem" tabindex="-1" href="/u/{{ app.username }}"><span class="icon-m-user"></span> 我的 MOOK</a>
            <a role="menuitem" tabindex="-1" href="/settings"><span class="icon-m-cog"></span> 个人设置</a>
            <a role="menuitem" tabindex="-1" href="/logout"> 退出</a>
        </div>
    </li>
    <li class="pull-right dropdown">
        <a href="#" id="id_add" data-toggle="dropdown">
            <span class="icon-m-add-mook"></span>
        </a>
        <div class="dropdown-menu" role="menu" aria-labelledby="id_add">
            <a role="menuitem" tabindex="-1" href="/create" target="_blank"><span class="icon-m-cog"></span> 创建 MOOK</a>
            <a role="menuitem" tabindex="-1" href="#"><span class="icon-m-cog"></span> 添加章节</a>
            {#<a role="menuitem" tabindex="-1" href="#">工具插件</a> #}
        </div>
        </li>
    {% else %}
    <li class="pull-right"><a class="text accounts" data-url="/login?ajax=true" data-toggle="modal" href="#login" data-target="#modal">登录</a></li>
    <li class="pull-right"><a class="text accounts" href="#register" data-url="/register?ajax=true" data-toggle="modal" data-target="#modal">注册</a></li>
    {% endif %}
    </ul>
    </div>
</header>
<!--header end-->