{% extends 'index/lessonmanage/layout.html.twig' %}

{% block title %}价格设置 - {{ parent() }}{% endblock %}

{% set side_nav = 'price' %}
{% set script_controller = 'course-manage/price' %}
{% block main %}

<div class="panel panel-default panel-col">
	<div class="panel-heading">价格设置
	</div>
	<div class="panel-body">

		{% if book %}
		
			<form class="form-horizontal" id="price-form" method="post" >

				<div class="form-group">
					<div class="col-md-2 control-label">
						<label for="price">价格</label>
					</div>
					<div class="col-md-8 controls">
						<input type="text" id="price" name="price" class="form-control" value="{{book.price}}">
						<div class="help-block" style="display:none;"></div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-8 controls">
						<button class="btn btn-fat btn-primary" id="price-save-btn" type="submit">保存</button>
					</div>
				</div>

				<input type="hidden" name="_csrf_token" value="">

			</form>
		{% else %}
		  <div class="alert alert-danger">抱歉，您无权设置课程价格，如有需要请联系网站管理员！</div>
		{% endif %}
	</div>
</div>

{% endblock %}