{% extends 'index/bookmanage/layout.html.twig' %}

{% block title %}章节管理 - {{ parent() }}{% endblock %}

{% set side_nav = 'chapter' %}
{% set script_controller = 'course-manage/lesson' %}

{% block main %}

<div class="panel panel-default panel-col lesson-manage-panel">
	<div class="panel-heading">
		<button class="btn btn-info btn-sm pull-right mhs" id="lesson-create-btn" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="/book/{{ book.bid }}/manage/article/{{ book.bid}}/new"><i class="glyphicon glyphicon-plus"></i> 创建章节</button>

		章节管理
	</div>

	{% if menus is empty %}

	 <div class="empty">暂无章节内容！</div>

	 {% else %}

	<div class="panel-body">
	<table id="book-menu-table" class="table table-striped table-hover">
    <thead>
    <tr>
      <th>编号</th>
      <th width="40%">标题</th>
      <th>创建时间</th>
      <th>修改时间</th>
      <th width="15%">操作</th>
    </tr>
    </thead>
    <tbody data-sort-url="/book/{{ book.bid }}/manage/sort">
    	{% for menu in menus %}
    		{% include 'index/bookmanage/chapter-table-tr.html.twig' %}
    	{% endfor %}
    </tbody>
  	</table>
    {{ web_macro.paginator(paginator) }} 
	</div>
  {% endif %}
</div>
{% endblock %}
