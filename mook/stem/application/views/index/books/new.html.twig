{% extends 'index/layout.html.old.twig' %}

{% block title %}创建图书 - {{ parent() }}{% endblock %}

{% set script_controller = 'course/create' %}

{% block content %}
<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default panel-page">
      <div class="panel-heading"><h2>创建图书</h2></div>

        <form id="course-create-form" class="form-horizontal" method="post">

          <div class="form-group">
            <div class="col-md-2 control-label">
              <label for="course_title" class="required">书名</label>
            </div>
            <div class="col-md-8 controls">
              <input type="text" id="course_title" name="title" required="required" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-8 controls">
              <input id="course-create-btn" class="btn btn-fat btn-primary" type="submit" value="创建">
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-8 controls">
              <p class="mtl"><a href="" class="text-muted" target="_blank">如何创建图书？</a></p>
            </div>
          </div>

          <input type="hidden" name="_csrf_token" value="">
        </form>
    </div><!-- /panel -->


  </div>

</div>
{% endblock %}