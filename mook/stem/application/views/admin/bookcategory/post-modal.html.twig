{% extends 'base/bootstrap-modal-layout.html.twig' %}

{% block title %}{% if type == 'create'%} 添加分类{% else %} 编辑分类{% endif %}{% endblock %}

{% block body %}
	<form id="category-form" class="form-horizontal" action="" method="/admin/books/category">
		<div class="form-group">
			<label class="col-md-2 control-label" for="category-name-field">名称</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="category-name-field" type="text" name="name" value="{{ category.name }}" tabindex="1">
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-2 control-label" for="category-sort-field">显示序号</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="category-sort-field" type="text" name="sort" value="{{ category.sort }}" tabindex="2">
				<div class="help-block">显示序号需为整数，分类按序号的顺序从小到大排序。</div>
			</div>
		</div>

		<input type="hidden" name="cid" value="{{ category.cid }}">
		<input type="hidden" name="type" value="{{ type }}">
		<input type="hidden" name="_csrf_token" value="">
	</form>

	<div>

	</div>



<script type="text/javascript"> app.load('category/save-modal') </script>
{% endblock %}

{% block footer %}
	{% if category.cid %}
		<button type="button" class="btn btn-default pull-left delete-category" data-url="/admin/books/category/delete/{{ category.cid }}" tabindex="5"><i class="glyphicon glyphicon-trash"></i> 删除</button>
	{% endif %}
  	<button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">取消</button>
	<button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#category-form" tabindex="4">保存</button>
{% endblock %}