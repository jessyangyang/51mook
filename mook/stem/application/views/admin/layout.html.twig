<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{% block title %}{% endblock %} 墨客beta 后台管理</title>
	<link href="/assets/libs/gallery2/bootstrap/3.1.1/css/bootstrap.css" rel="stylesheet" />
	<link href="/assets/css/common.css" rel="stylesheet" />
	<link href="/admin/css/admin.css" rel="stylesheet" />
	<link href="/admin/css/admin_v2.css" rel="stylesheet" />
	{% block javascripts %}{% endblock %}
	<!--[if lt IE 9]>
	<script src="/assets/libs/html5shiv.js"></script>
	<script src="/assets/libs/respond.min.js"></script>
	<![endif]-->
</head>

{% set nav = nav|default(null) %}
{% set menu = menu|default(null) %}

<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/admin/index">MOOK管理平台</a>
      </div>
      <div class="navbar-collapse collapse">

        <ul class="nav navbar-nav">
          <li {% if nav == 'books' %}class="active"{% endif %}><a href="/admin/books">图书</a></li>
          <li {% if nav == 'course' %}class="active"{% endif %}><a href="/admin/course">课程</a></li>
          <li {% if nav == 'user' %}class="active"{% endif %}><a href="/admin/user">用户</a></li>
          <li {% if nav == 'content' %}class="active"{% endif %}><a href="/admin/feed">内容</a></li>
          <li {% if nav == 'system' %}class="active"{% endif %}><a href="/admin/system">系统</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/admin"><i class="glyphicon glyphicon-home"></i> 回首页</a></li>
          <li><a href=""><i class="glyphicon glyphicon-user"></i> {{app.username}}</a></li>
          <li><a href="/admin/logout"><i class="glyphicon glyphicon-off"></i> 退出</a></li>
        </ul>

      </div><!--/.navbar-collapse -->
    </div>
  </div>

  <div class="container">
    <div class="row">{% block content %}{% endblock %}</div>
  </div>
  {% block footer %}{% endblock %}
   {% include 'base/script_boot.html.twig' with {script_main:'/admin/js/admin-app.js'}%}

  <div id="modal" class="modal"></div>
</body>
