<tr id="user-table-tr-{{ user.id }}">
  <td>
    <strong><a href="javascript:;" role="show-user" data-toggle="modal" data-target="#modal" data-url="/admin/user/id/{{user.id}}">{{user.username}}</a></strong>

    {% if user.locked %}
      <label class="label label-danger">禁</label>
    {% endif %}

    <br>
    <span class="text-muted text-sm">
      {{ user.role_name}}
    </span>
  </td>
  <td>
    {{ user.email }}
    <br>
    {% if user.emailVerified %}
      <label class="label label-success" title="该Email地址已验证">已验证</label>
    {% endif %}
  </td>

  <td>
    <span class="text-sm">{{ user.published|date('Y-n-d H:i:s') }}</span>
    <br>
    <a class="text-muted text-sm" href="http://www.baidu.com/s?wd={{ user.ip }}" target="_blank">{{ user.ip }}</a>
    <span></span>
  </td>
  <td>
    <span class="text-sm">
      {% if user.dateline == 0 %}
       --
      {% else %}
        {{ user.dateline|date('Y-n-d H:i:s') }}
      {% endif %}
    </span>
    <br>
    <a class="text-muted text-sm" href="http://www.baidu.com/s?wd={{ user.last_ip }}" target="_blank">{{ user.last_ip }}</a>
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="/admin/user/id/{{user.id}}" class="btn btn-default btn-sm">查看</a>
      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#modal" data-toggle="modal" data-url="/admin/user/post/{{user.id}}">编辑用户信息</a></li>


        <li><a href="#modal" data-toggle="modal" data-url="/admin/user/roles/{{user.id}}">设置用户组</a></li>

        <li><a href="#modal" data-toggle="modal" data-url="/admin/user/avatar/{{user.id}}">修改用户头像</a></li>

        <li><a href="#modal" data-toggle="modal" data-url="/admin/user/reset/{{user.id}}">修改密码</a></li>


        <li><a class="send-passwordreset-email" href="javascript:" data-url="">发送密码重置邮件</a></li>

        <li><a class="send-emailverify-email" href="javascript:" data-url="">发送Email验证邮件</a></li>

        {% if user.locked %}
          <li><a class="unlock-user" href="javascript:" title="解禁用户{{ user.nickname }}" data-url="">解禁用户</a></li>
        {% else %}
          <li><a class="lock-user" href="javascript:" title="封禁用户{{ user.nickname }}" data-url="">封禁用户</a></li>
        {% endif %}
      </ul>
    </div>
  </td>
</tr>

